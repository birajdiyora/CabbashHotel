@model Cabbash.Models.BookingViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="checkout-page pt-50 mb-100">
    <div class="container">
        <div class="row g-lg-4 gy-5">
            <div class="col-lg-8">
                <div class="checkout-form-wrapper">
                    <div class="checkout-form-title">
                        <h5>Billing Information</h5>
                    </div>
                    <div class="checkout-form">
                        <form asp-action="ProcessBooking" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-inner two mb-25">
                                        <label>Full Name*</label>
                                        <input type="text" asp-for="GuestName" placeholder="Enter your name" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-inner two mb-25">
                                        <label>Phone Number*</label>
                                        <input type="text" asp-for="PhoneNumber" placeholder="(212)+ 455 645 678" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-inner two mb-25">
                                        <label>Email Address <span>(Optional)</span></label>
                                        <input type="email" asp-for="Email" placeholder="info@gmail.com">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-inner two mb-25">
                                        <label>Your Location</label>
                                        <input type="text" asp-for="GuestLocation" placeholder="Type Location">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-inner two mb-25">
                                        <label>Street Address*</label>
                                        <input type="text" asp-for="StreetAddress" placeholder="Street address">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-inner two mb-25">
                                        <label>Postal Code*</label>
                                        <input type="text" asp-for="PostalCode" placeholder="Postal code">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-inner two mb-25">
                                        <label>Short Notes*</label>
                                        <textarea asp-for="SpecialRequests" placeholder="Write Something..."></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-inner2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" asp-for="SaveInformation" id="contactCheck11">
                                            <label class="form-check-label" for="contactCheck11">
                                                Save my information for next time when I booking
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" asp-for="HotelName" />
                            <input type="hidden" asp-for="Location" />
                            <input type="hidden" asp-for="Rating" />
                            <input type="hidden" asp-for="CheckInDate" />
                            <input type="hidden" asp-for="CheckOutDate" />
                            <input type="hidden" asp-for="NumberOfNights" />
                            <input type="hidden" asp-for="NumberOfRooms" />
                            <input type="hidden" asp-for="NumberOfAdults" />
                            <input type="hidden" asp-for="RoomType" />
                            <input type="hidden" asp-for="OriginalPrice" />
                            <input type="hidden" asp-for="Discount" />
                            <input type="hidden" asp-for="TotalPrice" />
                            <input type="hidden" asp-for="PromoCode" />
                            <input type="hidden" asp-for="PaymentMethod" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="checkout-form-wrapper">
                    <div class="checkout-form-title">
                        <h5>Your booking details</h5>
                    </div>
                    <div class="order-sum-area">
                        <div class="">
                            <div class="hotel-card">
                                <div class="hotel-img-wrap">
                                    <a href="#" class="hotel-img">
                                        <img src="~/img/innerpages/hotel-img3.jpg" alt="">
                                    </a>
                                </div>
                                <div class="hotel-content">
                                    <div class="rating-area">
                                        <ul class="star">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                <li><i class="bi bi-star-fill"></i></li>
                                            }
                                        </ul>
                                        <span>@Model.Rating Review</span>
                                    </div>
                                    <h5><a href="#">@Model.HotelName</a></h5>
                                    <div class="location-area">
                                        <div class="location">
