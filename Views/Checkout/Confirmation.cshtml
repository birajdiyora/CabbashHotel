@model Cabbash.Models.BookingViewModel
@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm p-4 mb-4 text-center">
                <i class="bi bi-check-circle-fill success-icon mb-3" style="font-size: 4rem; color: #28a745;"></i>
                <h4 class="fw-bold">Your booking is confirmed!</h4>
                <p class="sub-text mb-2">
                    Your reservation details are below. A confirmation email has been sent.
                </p>
                <div class="fw-semibold">
                    Booking ID: <span class="text-primary">@Model.BookingId</span>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="row g-3 align-items-center mb-3">
                <div class="hotel-card">
                    <div class="hotel-img-wrap">
                        <a href="#" class="hotel-img">
                            <img src="~/img/innerpages/hotel-img3.jpg" alt="">
                        </a>
                    </div>
                    <div class="hotel-content">
                        <div class="rating-area">
                            <ul class="star">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <li><i class="bi bi-star-fill"></i></li>
                                }
                            </ul>
                            <span>@Model.Rating Review</span>
                        </div>
                        <h5><a href="#">@Model.HotelName</a></h5>
                        <div class="location-area">
                            <div class="location">
