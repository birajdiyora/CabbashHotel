    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modelRooms = @Model.Rooms;
            const roomQtyElement = document.getElementById('room-qty');
            const roomsHiddenElement = document.getElementById('rooms-hidden');
            
            if (roomQtyElement) roomQtyElement.textContent = modelRooms;
            if (roomsHiddenElement) roomsHiddenElement.value = modelRooms;
            
            // Handle location selection
            const locationIdInput = document.querySelector('input[name="locationId"]');
            const locationItems = document.querySelectorAll('.option-list-destination li[data-location-id]');
            
            locationItems.forEach(function(item) {
                item.addEventListener('click', function() {
                    const locationId = this.getAttribute('data-location-id');
                    const locationName = this.getAttribute('data-location-name');
                    
                    // Update hidden input with new location
                    if (locationIdInput) locationIdInput.value = locationId;
                    
                    // Update visible display text
                    const destinationInput = document.querySelector('.destination-dropdown input[type="text"]');
                    const destinationText = document.querySelector('.destination-dropdown .destination h6');
                    const destinationSpan = document.querySelector('.destination-dropdown .destination span');
                    
                    if (destinationInput) destinationInput.value = locationName;
                    if (destinationText) destinationText.textContent = locationName;
                    if (destinationSpan) destinationSpan.textContent = 'Selected Location';
                    
                    // Mark selected in dropdown list
                    locationItems.forEach(function(li) { li.classList.remove('selected'); });
                    this.classList.add('selected');
                });
            });
            
            // On form submit: sum all per-room adults/children into single values
            const form = document.querySelector('form.filter-input');
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Sum all adults inputs
                    let totalAdults = 0;
                    let totalChildren = 0;
                    const adultsInputs = form.querySelectorAll('input[name="adults"]');
                    const childrenInputs = form.querySelectorAll('input[name="children"]');
                    
                    adultsInputs.forEach(function(inp) {
                        totalAdults += parseInt(inp.value, 10) || 0;
                        inp.disabled = true; // Exclude per-room inputs from submission
                    });
                    childrenInputs.forEach(function(inp) {
                        totalChildren += parseInt(inp.value, 10) || 0;
                        inp.disabled = true;
                    });
                    
                    // Insert total values as single hidden inputs
                    const aInput = document.createElement('input');
                    aInput.type = 'hidden';
                    aInput.name = 'adults';
                    aInput.value = totalAdults;
                    form.appendChild(aInput);
                    
                    const cInput = document.createElement('input');
                    cInput.type = 'hidden';
                    cInput.name = 'children';
                    cInput.value = totalChildren;
                    form.appendChild(cInput);
                    
                    // Room count: use the value already set by updateRoomSummary()
                    // or the server-rendered model value  do NOT overwrite with DOM count
                    // because Hotel page always renders 1 room in HTML regardless of model value
                });
            }
            
